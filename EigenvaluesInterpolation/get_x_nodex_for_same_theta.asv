    a = a1;
    b = b1;
    [dx,dt] = get_dx_dt_for_current_p1(a,b);

    x_nodes = [a];
    dt_list = [dt];
    while a^2+b^2 <= 1.001 
        a = a+dx;
        b = tan(theta)*a;
        [dx,dt] = get_dx_dt_for_current_p1(a,b);
        x_nodes = [x_nodes,x];
        dt_list = [dt_list,dt];
    end

end